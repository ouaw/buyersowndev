%body
  .container-fluid
    .row-fluid
      - unless user_signed_in?
        .span8
          = video_tag("BuyersOwn_Take_02.mp4", autoplay: :true)
        .span4
          = form_for("user", :url => user_session_path) do |f|
            = f.label :email
            %br/
            = f.text_field :email , :size=>'15',:maxlength=>'32'
            %br/
            = f.label :password
            %br/
            = f.password_field :password , :size=>'15', :maxlength=>'32'
            %br/
            = f.submit "Sign in"
            %br/
            = link_to "Forgot your password?", new_password_path('user')
            %br/
            = link_to "Sign Up", new_user_registration_path
      - else
        %h1 Today I would like to be a ...
        %ul
          = link_to "Buyer", wishes_path, :class => 'btn btn-block'
          %br
          = link_to "Seller", properties_path, :class => 'btn btn-block' 
